{% extends 'base.html.twig' %}

 {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/imgBg.css">
 {% endblock %}

{% block body %}
    <div class="container-question">
        <form method="GET" action="{{id}}/result" class="quizz ">
            {% for key , questions in question %}
                <h4 class="question">{{questions}}<h4>
                <ul>
                {% for propositions in proposition[key] %}
                    <input type="radio" name="{{key}}" style="text-align: left ; display: inline ;" value="{{propositions.reponse}}" required><span style="color: white; letter-spacing: 1px">{{propositions.reponse}}</span></input><br>
                {% endfor %}
                </ul>
            {% endfor %}
            <button type='submit' class="btn btn-dark">valider</button>
        </form>
    </div>
{% endblock %}
